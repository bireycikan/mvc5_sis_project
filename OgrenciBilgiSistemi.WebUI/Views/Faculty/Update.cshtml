@model OgrenciBilgiSistemi.WebUI.ViewModels.FacultyFormViewModel
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="row mr-2 ml-2">
        <div class="col">
            <h2 class="mt-3 mb-3">Güncellenecek Fakülte Bilgileri</h2>
            @using (Html.BeginForm("Update", "Faculty"))
            {
                <div>
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                </div>
                <input type="submit" value="Güncelle" class="btn btn-warning mb-3" />

                <div class="form-group">
                    @Html.LabelFor(m => m.FacultyDto.Name)
                    @Html.TextBoxFor(m => m.FacultyDto.Name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.FacultyDto.DeanName)
                    @Html.TextBoxFor(m => m.FacultyDto.DeanName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.Label("UniversityId", "Üniversite Adı")
                    @Html.DropDownListFor(m => m.UniversityId, new SelectList(Model.UniversityDtos, "Id", "Name"), "Üniversite seçiniz!", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.FacultyDto.Description)
                    @Html.TextAreaFor(m => m.FacultyDto.Description, new { @class = "form-control" })
                </div>
                @Html.HiddenFor(m => m.FacultyDto.Id);
            }
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
