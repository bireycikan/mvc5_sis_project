@model OgrenciBilgiSistemi.WebUI.ViewModels.DepartmentFormViewModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row mr-2 ml-2">
        <div class="col">
            <h2 class="mt-3 mb-3">Yeni Bölüm Ekle</h2>
            @using (Html.BeginForm("Add", "Department"))
            {
                <div>
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                </div>
                <input type="submit" value="Kaydet" class="btn btn-primary mb-3" />

                <div class="form-group">
                    @Html.LabelFor(m => m.DepartmentDto.Name)
                    @Html.TextBoxFor(m => m.DepartmentDto.Name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.DepartmentDto.ChairmanName)
                    @Html.TextBoxFor(m => m.DepartmentDto.ChairmanName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.DepartmentDto.FacultyId)
                    @Html.DropDownListFor(m => m.DepartmentDto.FacultyId, new SelectList(Model.FacultyDtos, "Id", "Name"), "Lütfen fakülte seçiniz!", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.DepartmentDto.Description)
                    @Html.TextAreaFor(m => m.DepartmentDto.Description, 3, 10, new { @class = "form-control" })
                </div>
            }
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval");
}
